2)
fun main() {
    var i = 0
    while (i < 10) {
        println(i)
        i++
        if (i == 5) {
            break
        }
    }
}
3)
fun main() {
    val time = 22
    if (time < 10) {
        println("Good Morning")
    } else if (time > 20) {
        println("Good Evening")
    } else {
        println("Good Night")
    }
}
